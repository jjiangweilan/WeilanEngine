#version 460 core

#if CONFIG
name : LineShader
topology : lineList
cull : off
#endif

#include "Common/SceneInfo.glsl"

layout(push_constant) uniform ps
{
    vec4 fromWS;
    vec4 toWS;
    vec4 color;
};

#if VERT
void main()
{
    vec4 pos = vec4(gl_VertexIndex == 0 ? fromWS.xyz : toWS.xyz, 1.0f);
    gl_Position = scene.viewProjection * pos;
}
#endif

#if FRAG
layout(location = 0) out vec4 outColor;
void main()
{
    outColor = color;
}
#endif
